{
  "name": "herond",
  "version": "1.0.0",
  "description": "Next generation Herond browser for macOS, Windows, Linux, and Android",
  "homepage": "https://github.com/brave/brave-browser#readme",
  "bugs": {
    "url": "https://github.com/brave/brave-browser/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nstra9x/herond-browser.git"
  },
  "license": "MPL-2.0",
  "author": {
    "name": "Herond Software <support@brave.com>"
  },
  "contributors": [
    {
      "name": "Cezar Augusto",
      "email": "cezar@brave.com"
    },
    {
      "name": "Matt Bacchi",
      "email": "mbacchi@gmail.com"
    }
  ],
  "scripts": {
    "apply_patches": "cd herond && npm run apply_patches --",
    "audit_deps": "cd herond && npm run audit_deps --",
    "build": "cd herond && npm run build --",
    "chromium_rebase_l10n": "cd herond && npm run chromium_rebase_l10n --",
    "cibuild": "cd herond && npm run cibuild --",
    "create_dist": "cd herond && npm run create_dist --",
    "delete_string_translations": "cd herond && npm run delete_string_translations --",
    "gclient": "cd herond && npm run gclient --",
    "gn_check": "cd herond && npm run gn_check --",
    "init": "node ./config/scripts/init.js herond-core",
    "lint": "cd herond && npm run lint --",
    "network-audit": "cd herond && npm run network-audit --",
    "pull_l10n": "cd herond && npm run pull_l10n --",
    "push_l10n": "cd herond && npm run push_l10n --",
    "start": "cd herond && npm run start --",
    "sync": "cd herond && npm run sync --",
    "test": "cd herond && npm run test --",
    "test-security": "cd herond && npm run test-security --",
    "test:scripts": "jest lib scripts --passWithNoTests",
    "update_patches": "cd herond && npm run update_patches --",
    "versions": "cd herond && npm run versions --"
  },
  "config": {
    "projects": {
      "herond-core": {
        "dir": "herond",
        "branch": "master",
        "repository": {
          "url": "https://github.com/nstra9x/herond-core.git"
        }
      }
    }
  },
  "dependencies": {
    "chalk": "4.1.2",
    "log-update": "4.0.0"
  }
}
